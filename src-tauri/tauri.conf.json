{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "souffleapptauri",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "list-ports",
            "cmd": "ls",
            "args": false
          },
          {
            "name": "ls",
            "cmd": "sh",
            "args": ["-c", "chmod +x list_usb.sh && ./list_usb.sh"]
          },
          { "name": "binaries/arduino-cli", "args": true, "sidecar": true }
        ]
      },
      "notification": {
        "all": true
      },
      "fs": {
        "scope": ["$RESOURCE/*"]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "binaries/arduino-cli"
      ],
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "identifier": "com.tauri.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["ressources/*"],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 1080,
        "resizable": true,
        "title": "Souffle - Desktop",
        "width": 1920
      }
    ]
  }
}
